.container-fluid{:style=>"margin-top: 4%;"}  
  = will_paginate @res, renderer: BootstrapPagination::Rails
  %table.table.table-bordered.table-condensed.table-hover.table-striped.datatable
    %thead
      %td STT    
      %td Mã giảng viên
      %td Tên giảng viên
      %td Mã lớp
      %td Tên môn học
      %td Phòng học
      %td Tuần
      %td Ngày dạy
      %td Số tiết dạy
    %tbody
      - if @res.count > 0        
        - @res.each_with_index do |res, index|
          %tr
            %td= (index+1).to_s
            %td= res["ma_giang_vien"]
            %td= res["ten_giang_vien"]
            %td= res["ma_lop"]
            %td= res["ten_mon_hoc"]
            %td= res["phong_hoc"]
            %td= res["tuan"]
            %td= res["ngay_day"]
            %td= res["so_tiet_day"]

            
