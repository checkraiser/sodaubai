%table.table.table-bordered.table-condensed.table-hover.table-striped.datatable
  %thead    
    %td STT
    %td Thời gian    
    %td Lớp
    %td Môn
    %td Giảng viên
    %td Phòng
    %td Đồng ý
    %td Không đồng ý
  %tbody    
    - @lichs.each_with_index do |lich, index|
      - if lich.lop_mon_hoc
        %tr
          %td= (index+1).to_s
          %td= lich.ngay_day.localtime.strftime("%H:%M %d/%m/%Y")          
          %td= lich.lop_mon_hoc.ma_lop
          %td= lich.lop_mon_hoc.ten_mon_hoc
          %td= lich.lop_mon_hoc.giang_vien
          %td= text_field_tag "dkbs[#{lich.id}][phong]", lich.phong_moi
          %td= radio_button_tag "dkbs[#{lich.id}][qd]", true, false
          %td= radio_button_tag "dkbs[#{lich.id}][qd]", false, false
