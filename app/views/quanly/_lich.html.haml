%table#lophc.table.table-bordered.table-condensed.table-hover.table-striped
  %colgroup
    %col{:style => "width: 30%"}
    %col{:style => "width: 30%"}
    %col{:style => "width: 20%"}            
    %col{:style => "width: 15%"}  
    %col{:style => "width: 5%"}  
  %thead
    %td
      %input{:type=> "checkbox",:id=>"selectall"} Chọn hết
    %td Mã sinh viên
    %td Họ đệm
    %td Tên  
    %td Tín chỉ                       
  %tbody    
    - @svs.each do |sv|
      %tr
        %td= check_box_tag "msv[#{sv.ma_sinh_vien}]",nil, false, :class => "selectedId"
        %td= sv.ma_sinh_vien
        %td= sv.ho_dem || ""
        %td= sv.ten
        %td= (sv.tin_chi ? true : false)
