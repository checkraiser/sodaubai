%h5 Nội dung giảng dạy:
= raw(@lich.noi_dung_day)

%h5 Số sinh viên vắng:
= @lich.diem_danhs.count || 0 

%h5 Danh sách sinh viên vắng:
- if @lich.diem_danhs.count > 0
  - @lich.diem_danhs.each_with_index do |dd, index|
    = dd.sinh_vien.fullname + "(" + dd.ma_sinh_vien + ")"

%h5 Tên giảng viên:
= @lich.lop_mon_hoc.ten_giang_vien

%h5 Tên môn:
= @lich.lop_mon_hoc.ten_mon_hoc

%h5 Phòng:
= @lich.phong_moi

- if @svs
  %h5 Danh sách sinh viên trực nhật:
  - @svs.each do |sv|
    = sv.fullname + "(" + sv.ma_sinh_vien + ")"
