= form_for @mon_hoc do |f|
  - if @mon_hoc.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mon_hoc.errors.count, "error")} prohibited this mon_hoc from being saved:"
      %ul
        - @mon_hoc.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ma_mon_hoc
    = f.text_field :ma_mon_hoc
  .field
    = f.label :ten_mon
    = f.text_field :ten_mon
  .actions
    = f.submit 'Save'
