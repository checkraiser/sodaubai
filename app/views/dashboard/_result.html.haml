%colgroup
  %col{:style => "width: 3%"}
  %col{:style => "width: 12%"}
  %col{:style => "width: 20%"}
  %col{:style => "width: 15%"}                    
  %col{:style => "width: 15%"}                    
%thead
  %td STT
  %td Mã sinh viên
  %td Họ đệm
  %td Tên
  %td Lớp hành chính
%tbody
  - if @results and @results.count > 0
    - @results.each_with_index do |sv, index|
      %tr
        %td= (index+1).to_s
        %td= sv.ma_sinh_vien
        %td= sv.ho + " " + sv.ho_dem
        %td= sv.ten     
        %td= sv.lop_hc   