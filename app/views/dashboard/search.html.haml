.container-fluid
  .navbar.navbar-fixed-top
    .navbar-inner
      .container-fluid
        %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => "/" } HPU
        .container.nav-collapse
          - if can? :read, SinhVien
            %ul.nav.pull-left#urls
              %li= link_to "Thời khóa biểu", "/calendar"
              %li= link_to "Thăm dò", "http://thamdo.hpu.edu.vn"
              - if can? :manage, LopMonHocSinhVien
                %li= link_to "Quản lý", "/quanly"          

          %ul.nav.pull-right
            %li= link_to 'Đăng xuất', destroy_user_session_path  

.container-fluid{:style=>"margin-top: 4%;"}
  .row-fluid
    - if can? :search, [SinhVien, GiangVien]
      = form_tag search_path, :method => :get, :class => "form-search" do   
        = select_tag "search_from", "<option>Sinh viên</option><option>Giảng viên</option><option>Lớp</option><option>Phòng</option>".html_safe, :class => "multiselect"
        %input.input-large.search-query{:type => "text", :name => "search", :placeholder => "Nhập từ khóa bạn muốn tra cứu"}
        %button.btn{:type => "submit"} Tra cứu
