%table.table.table-bordered.table-condensed.table-hover.table-striped.datatable  
  %thead        
    %td STT
    %td Tuần
    %td Thời gian
    %td Lớp
    %td Môn    
    %td Nội dung
    %td Sinh viên vắng
  %tbody    
    - @lichs.each_with_index do |lich, index|
      %tr        
        %td= (index+1).to_s
        %td= lich.tuan.to_s
        %td= format_date2(lich.ngay_day)
        %td= lich.lop_mon_hoc.ma_lop
        %td= lich.lop_mon_hoc.ten_mon_hoc
        %td= (raw(lich.noi_dung_day.gsub(/\n/,'<br/>')) if lich.noi_dung_day ) || ""
        %td
          - if lich.diem_danhs.count > 0 
            %ol         
              - lich.diem_danhs.vang.each do |dd|
                %li= dd.sinh_vien.to_s + ", "
