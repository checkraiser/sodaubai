:javascript
  var Model = Backbone.Model.extend({
    urlRoot: '/lop_mon_hocs/171/lop_mon_hoc_sinh_viens/'
  });
  var e = new Model({id: '26770'});  
  var ModelView = Backbone.View.extend({
    el: 'li',    
    events: {
      "click a": "test"
    },
    template: function(model){
      return '<span>' + model.ho_dem + '</span>';
    },
    initialize: function(){
      this.listenTo(this.model,'change', this.render);
    },
    render: function(){      
      this.$el.html(this.template(this.model.toJSON()));
      return this;
    },
    test: function(e){
      e.preventDefault();
      
    }
  });
  var mv = new ModelView({model: e});
  e.fetch();


