= form_tag lop_mon_hoc_diem_chi_tiets_path(@lop_mon_hoc.id), :method => :post, :remote => true do 
  .container-fluid
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/", :'data-pjax' => '#pjax_container' } HPU
          .container.nav-collapse
            %ul.nav.pull-left#urls            
              %li= link_to "Trang chủ", lop_mon_hoc_path(@lop_mon_hoc.id), :'data-pjax' => '#pjax_container'            
              %li.dropdown
                %a.dropdown-toggle{:href => "#", :'data-toggle' => "dropdown"} 
                  Điểm
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Điểm chuyên cần", lop_mon_hoc_diem_chuyen_cans_path(@lop_mon_hoc.id),  :'data-pjax' => '#pjax_container'            
                  %li.active= link_to "Điểm chi tiết", lop_mon_hoc_diem_chi_tiets_path(@lop_mon_hoc.id),  :'data-pjax' => '#pjax_container'
              %li.dropdown
                %a.dropdown-toggle{:href => "#", :'data-toggle' => "dropdown"} 
                  Quản lý
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Thông báo", lop_mon_hoc_thong_bao_lop_hocs_path(@lop_mon_hoc.id), :'data-pjax' => '#pjax_container'    
                  %li= link_to "Diễn đàn", lop_mon_hoc_topics_path(@lop_mon_hoc.id), :'data-pjax' => '#pjax_container'
                  %li= link_to "Quản lý sinh viên", lop_mon_hoc_lop_mon_hoc_sinh_viens_path(@lop_mon_hoc.id),  :'data-pjax' => '#pjax_container'
                  %li= link_to "Thời khóa biểu", lop_mon_hoc_path(@lop_mon_hoc.id)+'/calendar',  :'data-pjax' => '#pjax_container'
            %ul.nav.pull-right
              %li= submit_tag "Update", :class => "btn btn-success" 
              %li= link_to 'Đăng xuất',destroy_user_session_path                          
              
  .container-fluid{:style=>"margin-top: 100px;"}         
    %table{:class => "table datatable"}
      %thead
        %td Mã sinh viên
        %td Họ đệm
        %td Tên     
        %td Nhóm
        - if @lop_mon_hoc.get_thuc_hanh     
          %td Điểm thực hành
        - if @lop_mon_hoc.so_lan_kt and @lop_mon_hoc.so_lan_kt > 0
          - @lop_mon_hoc.so_lan_kt.times do |t|
            %td= "Điểm lần #{t+1}"
        
      %tbody
        - @svs.each do |sv|
          %tr
            %td= sv.ma_sinh_vien
            %td= sv.ho_dem
            %td= sv.ten
            %td= sv.group_id || 1         
            - if @lop_mon_hoc.get_thuc_hanh     
              %td= text_field_tag "msv[#{sv.ma_sinh_vien}][thuchanh]", nil, :value => sv.diem_thuc_hanh || "", :style => "width: 15%"
            - if @lop_mon_hoc.so_lan_kt and @lop_mon_hoc.so_lan_kt > 0
              - @lop_mon_hoc.so_lan_kt.times do |t|
                %td= text_field_tag "msv[#{sv.ma_sinh_vien}][lan#{t+1}]", nil, :value => sv.send("lan#{t+1}".to_sym) || "", :style => "width: 15%"
            
