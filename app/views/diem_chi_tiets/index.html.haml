= form_tag lop_mon_hoc_diem_chi_tiets_path(@lop_mon_hoc.id), :method => :post, :remote => true do 
  .container-fluid
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/", :'data-pjax' => '#pjax_container' } HPU
          .container.nav-collapse
            %ul.nav.pull-left#urls
              %li= link_to "Home", lop_mon_hoc_path(@lop_mon_hoc.id), :'data-pjax' => '#pjax_container'            
              %li= link_to "Diem chuyen can", lop_mon_hoc_diem_chuyen_cans_path(@lop_mon_hoc.id),  :'data-pjax' => '#pjax_container'            
              %li.active= link_to "Diem nhom", lop_mon_hoc_diem_chi_tiets_path(@lop_mon_hoc.id)+'/2',  :'data-pjax' => '#pjax_container'  
              %li= link_to "Thong Bao", lop_mon_hoc_thong_bao_lop_hocs_path(@lop_mon_hoc.id), :'data-pjax' => '#pjax_container'
              %li= link_to "Tai lieu", lop_mon_hoc_tai_lieu_mon_hocs_path(@lop_mon_hoc.id),  :'data-pjax' => '#pjax_container'
              %li= link_to "Group", lop_mon_hoc_lop_mon_hoc_sinh_viens_path(@lop_mon_hoc.id),  :'data-pjax' => '#pjax_container'
            %ul.nav.pull-right
              %li= submit_tag "Update", :class => "btn btn-success" 
              
  .container-fluid{:style=>"margin-top: 100px;"}         
    %table{:class => "table datatable"}
      %thead
        %td Ma Sinh Vien
        %td Ho dem
        %td Ten     
        %td Nhom
        %td Diem Thuc Hanh
        %td Diem Lan 1
        %td Diem Lan 2
        %td Diem Lan 3  
      %tbody
        - @svs.each do |sv|
          %tr
            %td= sv.ma_sinh_vien
            %td= sv.ho_dem
            %td= sv.ten
            %td= sv.group_id || 1              
            %td= text_field_tag "msv[#{sv.ma_sinh_vien}][thuchanh]", nil, :value => sv.diem_thuc_hanh || "", :style => "width: 15%"
            %td= text_field_tag "msv[#{sv.ma_sinh_vien}][lan1]", nil, :value => sv.lan1 || "", :style => "width: 15%"
            %td= text_field_tag "msv[#{sv.ma_sinh_vien}][lan2]", nil, :value => sv.lan2 || "", :style => "width: 15%"
            %td= text_field_tag "msv[#{sv.ma_sinh_vien}][lan3]", nil, :value => sv.lan3 || "", :style => "width: 15%"
