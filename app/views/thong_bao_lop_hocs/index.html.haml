          %td= link_to 'Edit', edit_lop_mon_hoc_thong_bao_lop_hoc_path(@lop_mon_hoc,thong_bao_lop_hoc), :'data-pjax' => '#pjax_container'
          %td= link_to 'Destroy', [@lop_mon_hoc,thong_bao_lop_hoc], :method => :delete, :data => { :confirm => 'Are you sure?' }


