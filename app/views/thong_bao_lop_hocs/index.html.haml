.container-fluid{:style=>"margin-top: 4%;"}    
  
  %table{:class => "table table-condensed datatable"}
    %thead      
      %td Thoi gian
      %td Noi dung        
      %td Sua
      %td Xoa
    %tbody
      - @thong_bao_lop_hocs.each do |thong_bao_lop_hoc|
        %tr                                  
          %td= link_to thong_bao_lop_hoc.created_at, [@lop_mon_hoc,thong_bao_lop_hoc], :'data-pjax' => '#pjax_container'  
