%table{:class => "table table-bordered table-condensed datatable"}  
  %thead    
    %td Chọn
    %td Tuần    
    %td Thời gian 
    %td Số tiết          
    %td Môn      
  %tbody
    - if @calendar        
      - @calendar.each_with_index do |lich, index|
        %tr     
          %td{:style => "background: ##{@color_map["#{lich["ma_mon_hoc"]}"]}" }= radio_button_tag "giohoc[thoigian]", "#{lich["tuan"]},#{DateTime.parse(lich["time"][0]).strftime("%Y-%m-%d-%H-%M")},#{lich["so_tiet"]},#{lich["ma_mon_hoc"]},#{lich["ten_mon_hoc"]},#{lich["ma_lop"]}", false  
          %td{:style => "background: ##{@color_map["#{lich["ma_mon_hoc"]}"]}" }= link_to "T" + lich["tuan"].to_s, tuan_path(lich["tuan"].to_s)
          %td{:style => "background: ##{@color_map["#{lich["ma_mon_hoc"]}"]}" }= link_to TkbGiangVien::THU2[lich["thu"]] + ", ngày " + DateTime.parse(lich["time"][0]).strftime("%d/%m") + ", " + DateTime.parse(lich["time"][0]).strftime("%Hh:%M") , lop_mon_hoc_buoihoc_path(lich["lop"], DateTime.parse(lich["time"][0]).strftime("%Y-%m-%d-%H-%M"))
          %td{:style => "background: ##{@color_map["#{lich["ma_mon_hoc"]}"]}" }= lich["so_tiet"]
          %td{:style => "background: ##{@color_map["#{lich["ma_mon_hoc"]}"]}" }= lich["ten_mon_hoc"]

= submit_tag "Đổi giờ", :class =>"btn btn-primary"                