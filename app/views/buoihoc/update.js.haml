- if @error
  :plain
    alert("Số tiết dạy không hợp lệ");
- else
  $("#buoihoc_sotiet").html("#{@lich.so_tiet_day_moi.to_s if @lich.so_tiet_day_moi}");
  $("#buoihoc_phong").val("#{@lich.phong_moi.to_s if @lich.phong_moi}");
