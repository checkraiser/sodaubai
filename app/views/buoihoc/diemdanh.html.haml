
= form_tag diemdanh_lop_mon_hoc_buoihoc_path(@lop_mon_hoc.id, @ngay.strftime("%Y-%m-%d-%H-%M")), :method => :post, :remote => true do 
    
  .container-fluid
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/", :'data-pjax' => '#pjax_container' } HPU
          .container.nav-collapse
            %ul.nav#urls
              %li= link_to "Sổ đầu bài", lop_mon_hoc_buoihoc_path(@lop_mon_hoc.id, @ngay.strftime("%Y-%m-%d-%H-%M")), :'data-pjax' => '#pjax_container'
              %li.active= link_to "Điểm danh chi tiết", diemdanh_lop_mon_hoc_buoihoc_path(@lop_mon_hoc.id, @ngay.strftime("%Y-%m-%d-%H-%M")), :'data-pjax' => '#pjax_container'
              %li= link_to "Thông tin lớp", lop_mon_hoc_path(@lop_mon_hoc.id), :'data-pjax' => '#pjax_container'
            %ul.nav.pull-right
              %li= submit_tag "Cập nhật", :class => "btn btn-success" 
              %li= link_to "Đăng xuất", destroy_user_session_path

  .container-fluid{:style => "margin-top:100px;"}   
    %ul.nav.pull-right
      %li
        %i
          %strong= "Thứ " + @buoihoc["thu"].to_s + ", ngày " + DateTime.parse(@buoihoc["time"][0]).strftime("%d/%m") + ", " + DateTime.parse(@buoihoc["time"][0]).strftime("%Hh:%M")      
    %h4 Thong tin lop mon: 
    .well.sidebar-nav{:style => "font-size: 12px;"}
      %strong Môn học:  
      %span= @buoihoc["ten_mon_hoc"]
      %strong.offset1 Giảng viên: 
      %span= @lop_mon_hoc.ten_giang_vien    
      %strong.offset1 Lớp: 
      %span= @buoihoc["ma_lop"]
      %strong.offset1 Số tiết: 
      %span= @lop_mon_hoc.so_tiet 
    %table{:class => "table datatable"}
      %colgroup
        %col{:style => "width: 15%"}
        %col{:style => "width: 20%"}
        %col{:style => "width: 15%"}
        %col{:style => "width: 10%"}
        %col{:style => "width: 15%"}
        %col{:style => "width: 10%"}
        %col{:style => "width: 20%"}
      %thead
        %td Mã sinh viên
        %td Họ đệm
        %td Tên
        %td Vắng
        %td Số tiết vắng
        %td Phép
        %td Ghi chú
      %tbody
        - @svs.each do |sv|
          %tr
            %td= sv[:ma_sinh_vien]
            %td= sv[:ho_dem]
            %td= sv[:ten]
            %td= check_box_tag "msv[#{sv[:ma_sinh_vien]}][status]",nil, get_status(@lop_mon_hoc.ma_lop, @lop_mon_hoc.ma_mon_hoc, sv[:ma_sinh_vien], @ngay), :disabled => "disabled"
            %td= text_field_tag "msv[#{sv[:ma_sinh_vien]}][sotiet]", nil, :value => DiemDanh.thongtin(@lop_mon_hoc.ma_lop, @lop_mon_hoc.ma_mon_hoc, sv[:ma_sinh_vien], @ngay).first.try(:so_tiet_vang) || 0,  :style => "width: 15%"
            %td= check_box_tag "msv[#{sv[:ma_sinh_vien]}][phep]",nil, get_phep(@lop_mon_hoc.ma_lop, @lop_mon_hoc.ma_mon_hoc, sv[:ma_sinh_vien], @ngay)
            %td= text_field_tag "msv[#{sv[:ma_sinh_vien]}][note]", nil, :value => DiemDanh.thongtin(@lop_mon_hoc.ma_lop, @lop_mon_hoc.ma_mon_hoc, sv[:ma_sinh_vien], @ngay).first.try(:note) || ""
    %li= link_to "Download", diemdanh_lop_mon_hoc_buoihoc_url(@lop_mon_hoc.id, @ngay.strftime("%Y-%m-%d-%H-%M"), format: :xlsx)