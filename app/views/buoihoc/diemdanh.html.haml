
= form_tag diemdanh_lop_mon_hoc_buoihoc_path(@lop_mon_hoc.id, @ngay.strftime("%Y-%m-%d-%H-%M")), :method => :post, :remote => true do 
    
  .container-fluid
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/" } HPU
          .container.nav-collapse
            %ul.nav#urls
              %li= link_to "Sổ đầu bài", lop_mon_hoc_buoihoc_path(@lop_mon_hoc.id, @ngay.strftime("%Y-%m-%d-%H-%M"))
              %li.active= link_to "Điểm danh chi tiết", diemdanh_lop_mon_hoc_buoihoc_path(@lop_mon_hoc.id, @ngay.strftime("%Y-%m-%d-%H-%M"))
              %li= link_to "Thông tin lớp", lop_mon_hoc_path(@lop_mon_hoc.id)
            %ul.nav.pull-right
              %li= submit_tag "Cập nhật", :class => "btn btn-success" 
              %li= link_to "Đăng xuất", destroy_user_session_path

  .container-fluid{:style => "margin-top:4%;"} 
    .row-fluid
      %ul.nav.pull-right
        %li
          %i
            %strong
              %span= current_user.fullname

        %li
          %i
            %span= "Tuần #{@current_week}: Từ ngày #{@week.tu_ngay.mday}/#{@week.tu_ngay.mon}, đến ngày #{@week.den_ngay.mday}/#{@week.den_ngay.mon}"    
    %ul.nav.pull-right
      - if @buoihoc
        %li
          %i
            %strong= "Thứ " + @buoihoc["thu"].to_s + ", ngày " + DateTime.parse(@buoihoc["time"][0]).strftime("%d/%m") + ", " + DateTime.parse(@buoihoc["time"][0]).strftime("%Hh:%M")      
    %h4 Thông tin lớp môn: 
    .well.sidebar-nav{:style => "font-size: 12px;"}
      %strong Môn học:  
      %span= @buoihoc["ten_mon_hoc"]
      %strong.offset1 Giảng viên: 
      %span= @lop_mon_hoc.ten_giang_vien    
      %strong.offset1 Lớp: 
      %span= @buoihoc["ma_lop"]
      
    .well.sidebar-nav{:style => "font-size: 12px;"}
      %strong.offset1 Phòng:  
      %span= text_field_tag "buoihoc[phong]", nil, :value => "#{(@lich.phong if @lich) || @buoihoc["phong"]}", :style => "width: 8%"
      %strong.offset1 Sĩ số: 
      %span= @svs.count
      %strong.offset1 Số sinh viên vắng mặt:  
      %span#sovang= @svvang.count
      %strong.offset1 Số tiết: 
      %span= text_field_tag "buoihoc[sotiet]", nil, :value => "#{(@lich.so_tiet_day if @lich) || @tkb.so_tiet}", :style => "width: 5%"
      %h6 Các sinh viên vắng mặt:
      %table#svvang{:class => "table table-bordered table-condensed"}  
        = render :partial => 'table1'
    - if @svs.count > 0
      %div#errorinfo
      = render :partial => 'table2'
    