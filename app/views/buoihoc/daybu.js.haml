- if @error == 1
  alert("Giờ dạy bù bị trùng lịch dạy, Vui lòng chọn giờ khác");
- if @error == 2
  alert("Giờ dạy bù không hợp lệ");
- unless @error
  $("#daybu").empty();
  $("#nghiday").empty();
  $("#daybu").html("#{escape_javascript(render :partial => 'daybu')}");
  :plain
    $('#dung').datetimepicker({
        pickTime: false
    });
    alert("Đề xuất của bạn đã được gởi đi");